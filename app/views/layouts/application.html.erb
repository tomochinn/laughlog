  </head>
  
  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/">laughlog</a>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "一覧", diarys_path, class: 'nav-link text-dark' %>
            </li>
          </ul>
        </div>
      </nav>
    </header>
  </body>

  <body>
    <%= yield %>
  </body>
</html>
